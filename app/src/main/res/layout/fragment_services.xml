<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.services.ServicesFragment">

    <!-- Кнопка "Создание заявки" -->
    <Button
        android:id="@+id/createRequestButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Создание заявки"
        android:textSize="16sp"
        android:background="@drawable/rounded_input_background"
        android:textColor="@android:color/white"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Кнопка "Посмотреть созданные заявки" -->
    <Button
        android:id="@+id/checkRequestButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Посмотреть созданные заявки"
        android:textSize="16sp"
        android:background="@drawable/rounded_input_background"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/createRequestButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Кнопка "Добавить показания счетчиков" -->
    <Button
        android:id="@+id/addMeterReadingButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Добавить показания счетчиков"
        android:textSize="16sp"
        android:background="@drawable/rounded_input_background"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/checkRequestButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Кнопка "Просмотр созданных показаний счетчиков" -->
    <Button
        android:id="@+id/checkMeterReadingButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Просмотр созданных показаний счетчиков"
        android:textSize="16sp"
        android:background="@drawable/rounded_input_background"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/addMeterReadingButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
